 fun main() {
 var text = arrayListOf("Самый обычный текст.", "еще одна строчка", "и еще одна лооол",) //тут кароч сам массив который, меняйте че хотите
    text.forEach {   
        if (it.contains(".")) { // тут мы проверяем каждый элемент массива на наличие точки 
        println(it)
        }
            else {
            println("$it.") //а тут уже короче изменяем массив и приписываем к каждому элементу точку, если таковой нету)
        }
      }
    }
